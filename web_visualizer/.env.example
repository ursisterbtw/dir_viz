# Web Visualizer Configuration Example
# Copy this file to .env and customize the values

# Security (REQUIRED in production)
WEB_VIZ_SECRET_KEY=your-super-secret-key-change-this-in-production

# Server Configuration
WEB_VIZ_HOST=127.0.0.1
WEB_VIZ_PORT=8000
WEB_VIZ_DEBUG=false
WEB_VIZ_RELOAD=false

# CORS Configuration
WEB_VIZ_CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# Rate Limiting
WEB_VIZ_RATE_LIMIT=100
WEB_VIZ_RATE_LIMIT_PERIOD=60

# Directory Scanning
WEB_VIZ_MAX_DEPTH=10
WEB_VIZ_MAX_WORKERS=4
WEB_VIZ_MAX_FILE_SIZE_MB=50

# Caching
WEB_VIZ_CACHE_TTL=300
WEB_VIZ_MAX_CACHE_ENTRIES=1000

# File Preview
WEB_VIZ_PREVIEW_MAX_LINES=500

# WebSocket Configuration
WEB_VIZ_WS_PING_INTERVAL=20
WEB_VIZ_WS_PING_TIMEOUT=10

# Database (for persistent annotations - optional)
# WEB_VIZ_DATABASE_URL=sqlite:///./web_visualizer.db
# WEB_VIZ_DATABASE_URL=postgresql://user:password@localhost:5432/webviz